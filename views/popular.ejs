    <header><%- include('./header');%></header>

    <div class="row">
      <h3>Popular Items</h3>
      <!-- Full-width images with number and caption text -->
      <div class="mySlides fade">
        <div class="text">Outer</div>
        <br />
        <div class="products">
          <% console.log(datas) %> <% datas["data_outer"].forEach(function
          (item,index){ %>
          <section class="product">
            <div class="each-product">
              <a href="/clothes/detail/<%= item.idx %>">
                <img src="<%= item.main_img %>" style="width: 100%" />
                <p class="product_name"><%= item.name %></p>
                <% if(item.discount == 0) { %>
                <p class="product_price"><%= item.price%></p>
                <% } else { %>
                <p class="product_price"><strike><%= item.price%></strike></p>
                <p class="product_discount">
                  sale: <%= item.price * (1-item.discount/100)%> (<%=
                  item.discount%>%)
                </p>
                <% }%>
                <p class="product_ex">product explanation</p>
              </a>
            </div>
          </section>
          <% })%>
        </div>
        <div class="numbertext">1 / 4</div>
        <!-- Next and previous buttons -->
        <a class="prev">&#10094;</a>
        <a class="next">&#10095;</a>
      </div>

