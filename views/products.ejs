<!DOCTYPE html>
<html lang="en">
  <head>
      <meta charset="utf-8">
      <title>SG_Items</title>
      <link rel="stylesheet" href="/css/header.css" />
      <link rel="stylesheet" href="/css/footer.css" />
      <link rel="stylesheet" href="/css/sale.css" />
      <link rel="stylesheet" href="/css/reset.css" />
  </head>
  <body>
    <header>
      <%- include('./header');%>
    </header>
      <div class="row">
        <h3 id="category"></h3>
        <!-- Full-width images with number and caption text -->
        <div class="mySlides fade">
          <!--<div class="text">Outer</div><br>-->
          <div class="products">
            <% data.forEach(function (item,index){ %>
              <section class="product">
                <div class="each-product">
                  <a href="/clothes/detail/<%= item.idx %>">
                  <img src="../<%= item.main_img %>" style="width:100%">
                  <p class="product_name"><%= item.name %></p>
                  <% if(item.discount == 0) { %>
                    <p class="product_price"><%= item.price%></p>
                  <% } else { %>
                    <p class="product_price"><strike><%= item.price%></strike></p>
                    <p class="product_discount">sale: <%= item.price * (1-item.discount/100)%> (<%= item.discount%>%)</p>
                  <% }%>
                  <p class="product_ex">product explanation</p>
                </a>
                </div>
              </section>
            <% })%>
            
          </div>       
        </div>
      </div>
      <br>
      <% var pageSize = page.pageSize %>
      <% var pageListSize = page.pageListSize %>
      <% var totalCnt = page.totalCnt %>
      <div class="page">
        <ul>
        <% for(var i = 0; i<pageListSize; i++) { %>
          <li id="page" value=<%= i+1 %> class='' >
            <a href='../outer/<%= i+1 %>'><%= i+1 %></a>
          </li>
        <% } %>
        </ul>
      </div>
      
      <footer>
        <span>&copy;copyright by supergreat</span>
      </footer>

  </body>
</html>



 